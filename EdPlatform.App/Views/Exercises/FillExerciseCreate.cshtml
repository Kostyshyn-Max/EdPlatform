@using EdPlatform.Business.Models
@model FillExerciseModel

<form class="create-form" asp-controller="Exercises" asp-action="FillExerciseCreate" method="post">
    <div class="form-title">
        <h2>Добавте вправу-заповнення</h2>
        <div class="line"></div>
    </div>

    <div class="form-body">
        <div class="form-group">
            <label asp-for="ExerciseName"></label>
            <input asp-for="ExerciseName" type="text" placeholder="Exercise name" />
            <span asp-validation-for="ExerciseName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Problem"></label>
            <textarea asp-for="Problem" id="fill-exercise-content"></textarea>
            <span asp-validation-for="Problem"></span>
        </div>
        <div class="form-group">
            <label asp-for="Answer"></label>
            <input asp-for="Answer" type="text" placeholder="Enter the answer" />
            <span asp-validation-for="Answer"></span>
        </div>
        <div class="form-group">
            <label asp-for="Order"></label>
            <input style="width: 4%;" asp-for="Order" type="number" />
            <span asp-validation-for="Order"></span>
        </div>
        <input asp-for="LessonId" type="hidden" value="@ViewBag.LessonId" />

        <div class="form-footer">
            <button type="submit">Create</button>
        </div>
    </div>
</form>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#fill-exercise-content',
        height: "480"
    });
</script>