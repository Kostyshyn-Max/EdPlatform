@using EdPlatform.Business.Models
@model QuizModel

<form asp-controller="Exercises" asp-action="QuizEdit" method="post">
    <div>
        <label asp-for="ExerciseName"></label>
        <input asp-for="ExerciseName" type="text" placeholder="Exercise name" value="@Model.ExerciseName"/>
        <span asp-validation-for="ExerciseName"></span>
    </div>
    <div>
        <label asp-for="Problem"></label>
        <textarea asp-for="Problem" id="fill-exercise-content">@Model.Problem</textarea>
        <span asp-validation-for="Problem"></span>
    </div>
    <div>
        <label asp-for="Order"></label>
        <input asp-for="Order" type="number" />
        <span asp-validation-for="Order"></span>
    </div>
    <input asp-for="LessonId" type="hidden" value="@Model.LessonId" />

    <button type="submit">Save changes</button>
</form>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#fill-exercise-content',
        height: "480"
    });
</script>


<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">Case name</th>
            <th scope="col">Link</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var quizCase in Model.Cases)
    {
        <tr>
            <td>@quizCase.CaseName</td>
            <td><a asp-controller="Cases" 
                asp-route-courseId="@Model.Lesson.Module.CourseId"
                asp-route-moduleId="@Model.Lesson.ModuleId"
                asp-route-lessonId="@Model.LessonId"
                asp-route-exerciseId="@Model.ExerciseId"
                asp-route-caseId="@quizCase.CaseId" asp-action="Edit" >Edit</a></td>
            
        </tr>
    }
    </tbody>
</table>