@using EdPlatform.Business.Models
@model CodeExerciseModel

<form asp-controller="Exercises" asp-action="CodeExerciseCreate" method="post">
    <div>
        <label asp-for="ExerciseName"></label>
        <input asp-for="ExerciseName" type="text" placeholder="Exercise name"/>
        <span asp-validation-for="ExerciseName"></span>
    </div>
    <div>
        <label asp-for="Condition"></label>
        <textarea asp-for="Condition"></textarea>
        <span asp-validation-for="Condition"></span>
    </div>
    <input asp-for="LessonId" type="hidden" value="@ViewBag.LessonId"/>
    <button type="submit">Create</button>
</form>