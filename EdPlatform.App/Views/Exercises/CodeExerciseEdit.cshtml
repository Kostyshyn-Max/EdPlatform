@using EdPlatform.Business.Models
@model CodeExerciseModel

<form asp-controller="Exercises" asp-action="CodeExerciseEdit" method="post">
    <div>
        <label asp-for="ExerciseName"></label>
        <input asp-for="ExerciseName" type="text" placeholder="Exercise name" value="@Model.ExerciseName"/>
        <span asp-validation-for="ExerciseName"></span>
    </div>
    <div>
        <label asp-for="Condition"></label>
        <textarea asp-for="Condition">@Model.Condition</textarea>
        <span asp-validation-for="Condition"></span>
    </div>
    <input asp-for="ExerciseId" type="hidden" value="@Model.ExerciseId"/>
    <input asp-for="LessonId" type="hidden" value="@Model.LessonId"/>

    <button type="submit">Save changes</button>
</form>