@using EdPlatform.Business.Models
@model ModuleModel

<form asp-controller="Modules" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ModuleName"></label>
        <input asp-for="ModuleName" type="text" class="form-control" placeholder="Module name" />
        <span asp-validation-for="ModuleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Order"></label>
        <input asp-for="Order" type="number" class="form-control" />
        <span asp-validation-for="Order"></span>
    </div>
    <input asp-for="CourseId" type="hidden" value="@ViewBag.CourseId" />
    <button class="btn btn-primary" type="submit">Create</button>
</form>