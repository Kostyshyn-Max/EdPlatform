@{
    ViewData["Title"] = "Home Page";
    ViewData["Categories"] = ViewBag.Categories;
}

<div class="hero">
    <div class="title">
        <h1>Хочеш створювати курси та навчатися безкоштовно?</h1>
        <h2><span>Ed</span>Platform - безкоштовна навчальна платформа для викладання та здобування знань</h2>

        <div class="buttons">
            <a href="#" class="go">Перейти в каталог</a>
            <a asp-controller="Courses" asp-action="Create" class="create">Створити власний курс</a>
        </div>
    </div>

    <img src="~/img/main-image.png">
</div>
<div class="course-carousel">
    <h2>Популярні курси: </h2>

    <div class="course-sort">
        <div class="cover">
            <h3>Популярні курси: </h3>

            <div>
                <button>
                    <img src="~/img/4Frames-Burger.svg">
                </button>
                <button>
                    <img src="~/img/Burger.svg">
                </button>
            </div>
        </div>

        <hr class="line">
    </div>

    @if (ViewBag.PopularCourses != null)
    {
        foreach (var course in ViewBag.PopularCourses)
        {
            <div class="course-plate">
                <div class="course-plate-title">
                    <div class="image-cover">
                        <img src="@("https://ed-platform.s3.amazonaws.com/"+course.ImageName)" />
                    </div>
                    <h2>
                        <a asp-controller="Courses" asp-action="Details"
                    asp-route-courseId="@course.CourseId">@course.CourseName</a>
                    </h2>
                </div>
            </div>
        }
    }
</div>

<body>
    <script>
        document.addEventListener('DOMContentLoaded', function(){
            let body = document.querySelector('body');
            body.classList.add("changed-background");
        });
    </script>
</body>