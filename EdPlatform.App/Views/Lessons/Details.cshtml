<div class="details-page">
    <div class="navigation-panel">
        <div class="name">
            <h2>Базовий курс програмування мовою Python</h2>
        </div>
        <ul class="timeline-list">
            @for (int i = 0; i < 15; i++)
            {
                <li>
                    @if (i == 0)
                    {
                        <img src="~/img/horizontal-start-timeline.svg" />
                    }
                    else if (i == 14)
                    {
                        <img src="~/img/horizontal-end-timeline.svg" />
                    }
                    else
                    {
                        <img src="~/img/horizontal-middle-timeline.svg" />
                    }
                </li>
            }
        </ul>
    </div>

    <div class="page-content">
        <div class="title">
            <h2>@Model.Order. @Model.LessonName</h2>
        </div>
        <div class="lecture">
            @Html.Raw(Model.LessonContent)    
        </div>

        <div class="buttons">
            <button>Перейти до вправ</button>
        </div>
    </div>
</div>

<style>
    html.dark .content{
        background-color: #232F3A;
    }
    
    html.light .content{
        background-color: #3f668a;
    }
</style>


