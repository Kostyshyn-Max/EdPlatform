@using EdPlatform.Business.Models
@model LessonModel

<form asp-controller="Lessons" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="LessonName"></label>
        <input asp-for="LessonName" type="text" class="form-control" placeholder="Lesson name" value="@Model.LessonName" />
        <span asp-validation-for="LessonName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LessonContent"></label>
        <textarea asp-for="LessonContent" id="lesson-content">@Model.LessonContent</textarea>
        <span asp-validation-for="LessonContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoUrl">(optional)</label>
        <input asp-for="VideoUrl" type="url" class="form-control" placeholder="Paste video url which will be embedded to the lesson" value="@Model.VideoUrl"/>
    </div>
    <div class="form-group">
        <label asp-for="Order"></label>
        <input asp-for="Order" type="number" class="form-control" />
        <span asp-validation-for="Order"></span>
    </div>
    <input type="hidden" value="@Model.ModuleId" />
    <button class="btn btn-primary" type="submit">Save changes</button>
</form>

@if (Model.Exercises != null)
{
<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">Exercise Name</th>
            <th scope="col">Link</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var exercise in Model.Exercises)
    {
        <tr>
            <td>@exercise.ExerciseName</td>
            <td>
                <a asp-controller="Exercises" asp-action="CodeExerciseEdit" 
                    asp-route-courseId="@Model.Module.CourseId" 
                    asp-route-moduleId="@Model.ModuleId"
                    asp-route-lessonId="@Model.LessonId"
                    asp-route-codeExerciseId="@exercise.ExerciseId"
                >Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
}

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#lesson-content',
        height: "480"
    });
</script>