<div class="comments-cover" style="margin: 5% auto; padding: 16px;">
    <div class="comment-info">
        <a>@ViewBag.Comments.Count</a>

        <h2>коментарів</h2>
    </div>

    @foreach (var comment in ViewBag.Comments)
    {
        <div class="comment">
            <div class="rate-stars">
                <div>
                    <a asp-controller="Comments" asp-action="Edit" asp-route-commentId="@comment.CommentId" class="edit-link">Відредагувати</a>
                    <a asp-controller="Comments" asp-action="Delete" asp-route-commentId="@comment.CommentId" class="delete-link">видалити</a>
                </div>
                <div>
                    @for (int i = 0; i < comment.RateStarsCount; i++)
                    {
                        <img src="~/img/star.svg" />
                    }
                </div>
            </div>
            <div class="comment-text">
                @comment.CommentText
            </div>
        </div>
    }
</div>