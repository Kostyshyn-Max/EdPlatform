@using EdPlatform.Business.Models
@model CourseViewModel

<form class="create-form" asp-controller="Courses" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-title">
        <h2>Створіть курс</h2>
        <div class="line"></div>
    </div>

    <div class="form-body">
        <div class="form-group">
            <label asp-for="CourseName"></label>
            <input class="input" asp-for="CourseName" type="text" class="form-control" placeholder="Course name"
                value="@Model.CourseName" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="form-group file">
            <div>Виберіть зображення курсу (jpg):</div>
            <label asp-for="Image"></label>
            <input class="input" asp-for="Image" class="form-control" accept="image/jpeg" placeholder="Course main image" value="@Model.Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.SelectCategories"></select>
        </div>
        <div class="form-group">
            <label asp-for="ShortDescription"></label>
            <textarea asp-for="ShortDescription" placeholder="Введіть короткий опис курсу"></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" type="text" class="form-control" id="text-editor" placeholder="Course description">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-footer">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        let footer = document.querySelector('footer');
        console.log(footer);
        footer.classList.remove('pinned');
    })
</script>

<style>
    .pinned{
        position: inherit;
    }
</style>