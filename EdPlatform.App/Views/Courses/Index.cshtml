@using EdPlatform.Business.Models

<div class="course-carousel">
    <h2>Доступні курси: </h2>
    @if (ViewBag.Courses != null)
    {
        <div class="carousel-popular">
            @foreach (CourseModel course in ViewBag.Courses)
            {
                <div class="course-plate">
                    <div class="course-plate-title">
                        <div class="image-cover">
                            <img src="@("https://ed-platform.s3.amazonaws.com/"+course.ImageName)" />
                        </div>

                        <h2><a asp-controller="Courses" asp-action="Details" asp-route-courseId="@course.CourseId">@course.CourseName</a></h2>
                    </div>
                </div>
            }
        </div>
    }
</div>