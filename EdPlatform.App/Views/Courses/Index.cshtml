<div class="container">
    <div class="row">
        @foreach (var course in ViewBag.Courses)
        {
            foreach (var courseUser in ViewBag.CourseUsers)
            {
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        @if (courseUser.CourseId == course.CourseId)
                        {
                            <h5 class="card-title">@course.CourseName <i>You already join in</i></h5>
                        }else
                        {
                            <h5 class="card-title">@course.CourseName</h5>
                        }
                        <h6 class="card-subtitle mb-2 text-muted">@course.Category.CategoryName</h6>
                        <p class="card-text">@course.Description</p>
                        <a asp-controller="Courses" asp-action="Details" asp-route-courseId="@course.CourseId">Details</a>
                    </div>
                </div>
            }
        }
    </div>
</div>