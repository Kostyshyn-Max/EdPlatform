@using EdPlatform.Business.Models
@model IOCaseModel

<form class="create-form" asp-controller="IOCases" asp-action="Create" method="post">
    <div class="form-title">
        <h2>Добавте тест</h2>
        <div class="line"></div>
    </div>

    <div class="form-body">
        <div class="form-group">
            <label asp-for="InputData"></label>
            <input class="input" asp-for="InputData" type="text" placeholder="Input data" />
            <span asp-validation-for="InputData"></span>
        </div>
        <div class="form-group">
            <label asp-for="OutputData"></label>
            <input class="input" asp-for="OutputData" type="text" placeholder="Output data" />
            <span asp-validation-for="OutputData"></span>
        </div>
        <input class="input" asp-for="CodeExerciseExerciseId" type="hidden" value="@ViewBag.ExerciseId" />

        <div class="form-footer">
            <button type="submit">Create</button>
        </div>
    </div>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let footer = document.querySelector('footer');
        footer.classList.add("pinned");
    });
</script>